
.category-item {
	padding: 15rpx;
	background-color: #eee;
	border-bottom: 2rpx solid #fff;
}
.category-active {
	background-color: #fff;
	color: orange;
	border-left: 5rpx solid orange;
	/* 左边框变成橘色     solid是边框的样式，表示边框是实线的。*/
}
.mini-btn {
	border: 2rpx solid orangered;
	padding: 0 4rpx;
	font-size: 22rpx;
	color: orangered;
	border-radius: 5rpx;
	font-weight: bold;
}
.mini-btn-fill {
	background-color: orange;
	padding: 0 4rpx;
	color: #fff;
	font-size: 24rpx;
	border-radius: 5rpx;
}
.active {
	background-color: #ffd100;
}

